<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    <FrameLayout
        android:id="@+id/framecontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></FrameLayout>


    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.itg8.ticketapp.RegistrationActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/backChangingImages"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/desc"
                    android:orientation="vertical"
                    android:src="@drawable/change_imgfive_converted"></ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner"
                    android:digits="@string/digits"
                    android:fontFamily="sans-serif"
                    android:hint="First Name"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

                <EditText
                    android:id="@+id/middlename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner"
                    android:digits="@string/digits"
                    android:fontFamily="sans-serif"
                    android:hint="Middle Name"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

                <AutoCompleteTextView

                    android:id="@+id/lastname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner"
                    android:digits="@string/digits"
                    android:ems="13"
                    android:fontFamily="sans-serif"
                    android:hint="Last Name"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">


                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableRight="@android:drawable/ic_menu_my_calendar"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif"
                    android:hint="Date Of Birth"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Age"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:text="Gender"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/rdo_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.30"
                        android:checked="true"
                        android:fontFamily="sans-serif"
                        android:text="Male"
                        tools:targetApi="jelly_bean" />

                    <RadioButton
                        android:id="@+id/rdo_engineer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.30"
                        android:fontFamily="sans-serif"
                        android:text="Female"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:targetApi="jelly_bean" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                android:orientation="horizontal"
                android:padding="3dp">

                <Spinner
                    android:id="@+id/language"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0.8"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:spinnerMode="dropdown"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/desc"
                    android:src="@android:drawable/arrow_down_float"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/addPatientImgBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="#50BAA0"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="Add Photo"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />

                <ImageView
                    android:id="@+id/patientimage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:contentDescription="@string/desc"
                    android:padding="10dp"
                    android:src="@drawable/emp_img" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3dp">

                <MultiAutoCompleteTextView

                    android:id="@+id/ailments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner"
                    android:ems="13"
                    android:fontFamily="sans-serif"
                    android:hint="Ailments"
                    android:digits="@string/digitsnumber"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:paddingLeft="10dp"
                    android:text="Date :" />

                <TextView
                    android:id="@+id/fodtextshow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3dp">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <EditText
                        android:id="@+id/follow_up_date"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rectangle_corner"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableRight="@android:drawable/ic_menu_my_calendar"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif"
                        android:hint="Follow up Date"
                        android:inputType="date"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:targetApi="jelly_bean" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"

                    android:text="OR" />

                <EditText
                    android:id="@+id/follow_up_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Follow up Days"
                    android:inputType="date"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/follow_up_weeks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Follow up Week"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"

                    android:text="OR" />

                <EditText
                    android:id="@+id/follow_up_Months"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Follow up Month"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                android:orientation="horizontal"
                android:padding="3dp">

                <Button
                    android:id="@+id/prescriptionBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="#50BAA0"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="Add Prescription"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />


                <ImageView
                    android:id="@+id/imageViewprescription"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:contentDescription="@string/desc"
                    android:padding="10dp"
                    android:src="@drawable/emp_img" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/cliniclaNotes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Clinical Notes"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

            <!-- <TextView
                 android:layout_width="match_parent"
                 android:layout_height="30dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/cancelbtn"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#50BAA0"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />


            </LinearLayout>

            <include
                layout="@layout/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>

