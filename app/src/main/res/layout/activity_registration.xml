<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/framecontainer"></FrameLayout>



    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.itg8.ticketapp.RegistrationActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backChangingImages"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:orientation="vertical"
                android:src="@drawable/change_imgfive_converted"
                android:contentDescription="@string/desc">
            </ImageView>


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:hint="First Name"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/rectangle_corner"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:padding="8dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/middlename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:fontFamily="sans-serif"
                    android:hint="Middle Name"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/rectangle_corner"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:padding="8dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />

                <AutoCompleteTextView

                    android:id="@+id/lastname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_corner"
                    android:ems="13"
                    android:hint="Last Name"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:layout_margin="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:drawableRight="@android:drawable/ic_menu_my_calendar"
                    android:hint="DOB"
                    android:maxLines="1"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif"
                    android:inputType="date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/rectangle_corner"
                    android:inputType="number"
                    android:hint="Age"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />

            </LinearLayout>

                  <TextView
                     android:layout_width="match_parent"
                      android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_corner"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Gender"
                    android:maxLength="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:padding="10dp"
                    tools:targetApi="jelly_bean" />

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal">
                    <RadioButton
                        android:checked="true"
                        android:layout_weight="0.30"
                        android:layout_gravity="center"
                        android:id="@+id/rdo_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:fontFamily="sans-serif"
                        android:layout_marginRight="4dp"
                        tools:targetApi="jelly_bean" />
                    <RadioButton
                        android:layout_weight="0.30"
                        android:id="@+id/rdo_engineer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="sans-serif"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:targetApi="jelly_bean" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                android:padding="3dp">

                <Spinner
                    android:id="@+id/language"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.8"
                    android:layout_margin="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif"
                    android:padding="0dp"
                    android:spinnerMode="dropdown"
                    tools:targetApi="jelly_bean" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="@string/desc"
                    android:visibility="gone"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner">

                <Button
                    android:id="@+id/addPatientImgBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Add Photo"
                    android:background="#50BAA0"
                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />

                <ImageView
                    android:id="@+id/patientimage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:src="@drawable/emp_img"
                    android:contentDescription="@string/desc"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_weight="1">

                <MultiAutoCompleteTextView

                    android:id="@+id/ailments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:ems="13"
                    android:hint="Ailments"
                    android:background="@drawable/rectangle_corner"
                    android:fontFamily="sans-serif"
                    tools:targetApi="jelly_bean" />



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Date :"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:id="@+id/fodtextshow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:textSize="14sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/linear1">

                <EditText
                    android:id="@+id/follow_up_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:hint="Follow up Date"
                    android:inputType="date"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:drawableRight="@android:drawable/ic_menu_my_calendar"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"

                    android:text="OR"/>

                <EditText
                    android:id="@+id/follow_up_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:hint="Follow up Days"
                    android:inputType="date"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/follow_up_weeks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:hint="Follow up Weeks"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"

                    android:text="OR"/>

                <EditText
                    android:id="@+id/follow_up_Months"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:hint="Follow up Month"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    tools:targetApi="jelly_bean"
                    android:maxLines="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_weight="1"
                android:background="@drawable/rectangle_corner"
                >

                <Button
                    android:id="@+id/prescriptionBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Add Prescription"
                    android:background="#50BAA0"
                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />


                <ImageView
                    android:id="@+id/imageViewprescription"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:src="@drawable/emp_img"
                    android:contentDescription="@string/desc"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <EditText
                    android:id="@+id/cliniclaNotes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_corner"
                    android:hint="Clinical Notes"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:maxLines="4"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:gravity="left"
                    tools:targetApi="jelly_bean" />

            </LinearLayout>

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_weight="1"
                >
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.5"
                    android:text="Cancel"
                    android:background="#c0c0c0"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_weight=".1"/>
                <Button
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Add"
                    android:background="#50BAA0"
                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    tools:targetApi="jelly_bean" />




            </LinearLayout>

        <include layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        </LinearLayout>

    </ScrollView>


</LinearLayout>

