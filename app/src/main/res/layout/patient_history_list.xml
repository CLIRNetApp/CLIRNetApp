<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            android:paddingTop="10dp"
            card_view:cardCornerRadius="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp">

                <ImageView
                    android:id="@+id/prescriptionImg"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:contentDescription="@string/desc"
                    android:padding="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main_profile"
                    />

                <RelativeLayout
                    android:id="@+id/test_relat_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/white"
                    android:paddingTop="100dp">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:background="@drawable/rounded_corner_color">

                        <TextView
                            android:id="@+id/tv_visit_date"
                            android:layout_width="140dp"
                            android:layout_height="70dp"
                            android:padding="15dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/history_bar"
                            android:textColor="@color/grey"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:transitionName="image"
                            tools:targetApi="lollipop" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/text1"
                            style="?android:textAppearanceMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:text="Ailments:"
                            android:textColor="@color/bg_list_row"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_ailment"
                            style="?android:textAppearanceMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:layout_weight="1.4"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Ailments" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll2"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            style="?android:textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="200dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:text="Follow up date"
                            android:textColor="@color/bg_list_row"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_fod"
                            style="?android:textAppearanceMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="90dp"
                            android:layout_weight="1.4"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:textSize="18sp"
                            tools:text="Follow up date" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll3"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            style="?android:textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="200dp"
                            android:layout_weight="0.6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:text="Clinical Notes "
                            android:textColor="@color/bg_list_row" />

                        <TextView
                            android:id="@+id/tv_clinical_notes"
                            style="?android:textAppearanceMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:layout_weight="1.4"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            tools:text="Clinical Notes" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>

