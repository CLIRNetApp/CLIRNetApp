<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <ImageView
                android:paddingTop="0dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/hist"
                android:contentDescription="@string/desc" />

            <RelativeLayout
                android:id="@+id/test_relat_lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingTop="100dp"
                android:background="@color/white">


                <TextView
                    android:id="@+id/tv_visit_date"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:gravity="right"
                    android:text="14 Feb"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:src="@drawable/history_bar"
                    android:background="@drawable/rounded_corner_color"
                    android:transitionName="image"
                    android:textColor="@color/white"
                    tools:targetApi="lollipop" />



                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text1"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginLeft="180dp"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:text="Ailments:"
                        android:textStyle="bold"
                        android:textColor="@color/bg_list_row"
                        android:textSize="18sp"/>



                    <TextView
                        android:id="@+id/tv_ailment"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_marginRight="80dp"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:textSize="18sp"
                        tools:text="Ailments" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll2"
                    android:layout_marginLeft="150dp"
                    android:orientation="horizontal">

                    <TextView

                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="180dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:text="Follow up date"
                        android:textSize="18sp"
                        android:textColor="@color/bg_list_row"/>

                    <TextView
                        android:id="@+id/tv_fod"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:layout_marginRight="90dp"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:textSize="18sp"
                        tools:text="Follow up date" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll3"
                    android:orientation="horizontal">


                    <TextView
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginLeft="330dp"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        android:text="Clinical Notes"
                        android:textColor="@color/bg_list_row"/>

                    <TextView
                        android:id="@+id/tv_clinical_notes"
                        style="?android:textAppearanceMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="80dp"
                        android:ellipsize="end"
                        android:maxLines="5"
                        android:paddingLeft="@dimen/small_margin"
                        android:paddingRight="@dimen/small_margin"
                        android:paddingTop="@dimen/small_margin"
                        tools:text="Clinical Notes" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

