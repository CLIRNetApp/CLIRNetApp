<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clinical_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sysdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="end"
            android:text="Date"
            android:textAppearance="@style/Base.Widget.AppCompat.Button.Small"
            android:textColor="#827d86"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/patientimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/sysdate"
            android:gravity="center"
            android:src="@drawable/main_profile"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#FF0000"
            app:civ_shadow_radius="0" />


        <LinearLayout
            android:id="@+id/namelayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/patientimage"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/firstname"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bottom_line"
                android:digits="@string/digits"
                android:hint="First Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/middlename"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bottom_line"
                android:digits="@string/digits"
                android:hint="Middle Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

            <AutoCompleteTextView
                android:id="@+id/lastname"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bottom_line"
                android:digits="@string/digits"
                android:ems="13"
                android:hint="Last Name"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                tools:targetApi="jelly_bean" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/namelayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namelayout1"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/patientimage"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <EditText
                android:id="@+id/age"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bottom_line"
                android:hint="Age"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="OR"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="1dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/edittext_bottom_line"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableRight="@android:drawable/ic_menu_my_calendar"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif"
                android:hint="Date Of Birth"
                android:inputType="date"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <Button
                android:id="@+id/resetdobage"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:background="#50BAA0"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/reset"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="#50BAA0"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@+id/namelayout2"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/addPatientImgBtn"
            android:gravity="center"
            android:paddingRight="3dp"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGender"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/namelayout2"
            android:layout_marginBottom="@dimen/micro_padding"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/txt"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/m"
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/female"
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radioTrans"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/transgender"
                android:textColor="@drawable/rbtn_textcolor_selector" />
        </RadioGroup>


        <TextView
            android:id="@+id/txt1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@+id/namelayout2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/radioGender"
            android:gravity="center"
            android:paddingTop="35dp"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioLanguage"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_below="@+id/namelayout2"
            android:layout_marginBottom="@dimen/micro_padding"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/txt1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp">


            <RadioButton
                android:id="@+id/radioEng"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/eng"
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radioHin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/hin"
                android:textColor="@drawable/rbtn_textcolor_selector" />

            <RadioButton
                android:id="@+id/radioBen"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/ben"
                android:textColor="@drawable/rbtn_textcolor_selector" />


        </RadioGroup>


        <Button
            android:id="@+id/addPatientImgBtn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@+id/patientimage"
            android:layout_marginTop="26dp"
            android:background="#50BAA0"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="@string/addPhoto"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/addresslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addPatientImgBtn"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/layoutMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:text="@string/primarytype"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/phoneTypeSpinner"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient_spineer_without_square"
                        android:gravity="start"
                        android:prompt="@string/spinner_prompt"
                        android:spinnerMode="dropdown"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="14sp" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/number"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/isd_code"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.1"
                        android:background="@drawable/gradient_spineer_without_square"
                        android:gravity="center"
                        android:text="@string/mobstart"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/mobile_no"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/edittext_bottom_line"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/emailid"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="14sp"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:roundedCorners="false" />


                <TextView
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/uidtype"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/uidtype"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_spineer_without_square"
                    android:gravity="center"
                    android:prompt="@string/spinner_prompt"
                    android:spinnerMode="dropdown"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/uid"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/uid"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="@string/uid"
                    android:inputType="text"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/alternateNumber"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/phoneTypeSpinner2"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/gradient_spineer_without_square"
                    android:gravity="start"
                    android:prompt="@string/spinner_prompt"
                    android:spinnerMode="dropdown"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/number"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/isd_code2"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.1"
                    android:background="@drawable/gradient_spineer_without_square"
                    android:gravity="center"
                    android:text="@string/mobstart"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/alternatemobile_no"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="#50BAA0"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:text="Address Details :"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/address"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="start"
                    android:hint="@string/address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/city"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="City/Town"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="md"
                    app:roundedCorners="false" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/district"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/district"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="District"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:textSize="14sp"
                    app:bootstrapBrand="success" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:text="@string/pin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bottom_line"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="Pin"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/state"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/stateSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_spineer_without_square"
                    android:focusable="true"
                    android:spinnerMode="dialog"
                    android:textDirection="locale" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#c0c0c0"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:targetApi="jelly_bean" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#50BAA0"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingRight="5dp"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tools:targetApi="jelly_bean" />


    </LinearLayout>


    <include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1"
        android:paddingTop="20dp" />


</LinearLayout>
