<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dep"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".NavigationActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">



                <LinearLayout
                    android:id="@+id/datelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/backChangingImages"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="end"
                        android:orientation="vertical"
                        android:contentDescription="@string/desc"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="0.2"
                            android:gravity="start"
                            android:padding="3dp"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/addanewPatient"
                            android:layout_width="wrap_content"
                            android:layout_height="55dp"
                            android:layout_marginStart="0dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/rounded_corner_color"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:text="Patient Not Found? Add New"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="invisible"
                            tools:targetApi="jelly_bean" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <Button
                                android:id="@+id/exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="export"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/demo"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="export"
                                android:visibility="invisible" />

                            <Button
                                android:id="@+id/sync"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="right"
                                android:background="@drawable/sync1"
                                android:gravity="end" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_profile"
                    android:visibility="gone"
                    android:contentDescription="@string/desc"/>

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clir_img"
                    android:visibility="gone"
                    android:contentDescription="@string/desc"/>

                <!--  <include layout="@layout/home_list_text_records"
                      android:layout_below="@+id/datelayout"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#50BAA0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/todays_patient_updatetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="14dp"
                        android:text="Today's Patient Updates"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.2"
                        android:gravity="start"
                        android:padding="2dp"
                        android:text="#"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Name"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Gender"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Age"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Phone Number"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Follow up Date"
                        android:textColor="@color/black" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/norecordtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="60dp">

                    <TextView
                        style="@android:style/TextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No Records Found !!"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:scrollbars="vertical"
                    app:layoutManager="GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:spanCount="1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Searchrecycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:scrollbars="vertical"
                    app:layoutManager="GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:spanCount="1"
                    android:visibility="gone"/>



            </LinearLayout>




            <FrameLayout
                android:id="@+id/flContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/flContent2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            </FrameLayout>

            <include
                android:id="@+id/foot2"
                layout="@layout/footer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />
        </LinearLayout>



    </ScrollView>

</LinearLayout>