<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dep"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/backChangingImages"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/desc"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/datelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_weight="0.2"
                        android:gravity="start"
                        android:padding="3dp"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/addanewPatient"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginStart="0dp"
                        android:layout_weight="0.6"
                        android:background="@drawable/rounded_corner_color"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:paddingBottom="2dp"
                        android:text="Patient Not Found? Add New"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="invisible"
                        tools:targetApi="jelly_bean" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingBottom="2dp">

                        <Button
                            android:id="@+id/exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="export"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="export"
                            android:visibility="invisible" />

                        <Button
                            android:id="@+id/sync"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/sync1"
                            android:gravity="end" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="#"
                        android:textColor="#ff0000" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.5"
                        android:text="Name"
                        android:textColor="#ff0000" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textColor="#ff0000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Age"
                        android:textColor="#ff0000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Phone Number"
                        android:textColor="#ff0000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#50BAA0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/todays_patient_updatetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="14dp"
                        android:text="Today's Patient Updates"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.3"
                        android:gravity="start"
                        android:padding="2dp"
                        android:text="#"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Name"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Gender"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Age"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Phone Number"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Follow up Date"
                        android:textColor="@color/black" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/norecordtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="60dp">

                    <TextView
                        style="@android:style/TextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No Records Found !!"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:scrollbars="vertical"
                    app:layoutManager="GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:spanCount="1" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/Searchrecycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="0.6"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    app:layoutManager="GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:spanCount="1" />
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/input_register"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/incompletedisplay_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Incomplete Prescription Queue."
                    android:textColor="@color/bg_login"
                    android:textSize="16sp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/nameheader"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_corner"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.4"
                        android:gravity="start"
                        android:padding="2dp"
                        android:text="#"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.45"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Image Name"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Email"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Phone Number"
                        android:textColor="@color/black" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Added Date"
                        android:textColor="@color/black" />


                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/incomplete_recordsRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_weight="0.6"
                    android:paddingTop="5dp"
                    android:paddingBottom="2dp"
                    android:scrollbars="vertical"
                    app:layoutManager="GridLayoutManager"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    app:spanCount="1"
                    android:visibility="gone"/>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:gravity="bottom">


                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/input_register"
                        android:paddingBottom="10dp" />

                    <ImageView
                        android:id="@+id/footer_img"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/view1"
                        android:gravity="center"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/logon" />

                    <Button
                        android:id="@+id/fab"
                        android:layout_width="60dp"
                        android:layout_height="72dp"
                        android:layout_margin="2dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/quickadd"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/copy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/footer_img"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="\u00a9 Copyright CLIRNet Services Private Limited 2016. All Rights Reserved."
                        android:textColor="@color/input_register"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/quickaddtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/copy"
                        android:gravity="right"
                        android:padding="2dp"
                        android:text="Quick Add"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/bg_login"
                        android:textSize="14sp"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/privacyPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/copy"
                        android:layout_toLeftOf="@+id/termsandCondition"
                        android:layout_toStartOf="@+id/termsandCondition"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Privacy Policy "
                        android:textColor="@color/bg_login" />

                    <TextView
                        android:id="@+id/termsandCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/quickaddtxt"
                        android:layout_toStartOf="@+id/quickaddtxt"
                        android:layout_below="@+id/copy"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Terms and Conditions"
                        android:textColor="@color/bg_login" />

                </RelativeLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/flContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
